<Window x:Class="MaoRedisMianBan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaoRedisMianBan"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel>
        <DockPanel.Resources>
            <HierarchicalDataTemplate DataType="{x:Type local:R_Server}" ItemsSource = "{Binding Path=Databases}">
                <TextBlock Text="{Binding Path=Name}"/>
            </HierarchicalDataTemplate>

            <HierarchicalDataTemplate DataType="{x:Type local:R_Database}" ItemsSource = "{Binding Path=Keys}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Path=Name}"/>
                    <Button Content="reload" Click="Button_Click"></Button>
                </StackPanel>
            </HierarchicalDataTemplate>

            <DataTemplate DataType="{x:Type local:R_Key}">
                <TextBlock Text="{Binding Path=Name}"/>
            </DataTemplate>
        </DockPanel.Resources>
        <StackPanel Orientation="Vertical" DockPanel.Dock="Left" MinWidth="200">
            <Menu Name="menu1" Margin="10,10,10,10">
                <MenuItem Name="MyMenuItems" Header="Servers" />
            </Menu>

            <TreeView Margin="10,10,10,10" BorderThickness="0">
                <TreeViewItem Name="MyTreeViewItems" />
            </TreeView>
        </StackPanel>

        <ToolBar DockPanel.Dock="Top">
            <Label Content="Key:"/>
            <TextBox BorderBrush="Black" BorderThickness="1" />
        </ToolBar>
        <TextBox DockPanel.Dock="Bottom"/>
    </DockPanel>

</Window>
